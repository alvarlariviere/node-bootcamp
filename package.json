{
  "name": "natours",
  "version": "1.0.0",
  "description": "Learning node, express and mongoDB",
  "main": "app.js",
  "scripts": {
    "//-BASE": "========================================================================================================| BASE |",
    "start": "node server.js",
    "dev": "run-s kill:port tab:server tab:client open:page",
    "//-SERVER": "====================================================================================================| SERVER |",
    "tab:server": "ttab -t 'Server' npm run start:server",
    "start:server": "nodemon -e js,pug,css server.js",
    "start:server:prod": "NODE_ENV=production nodemon server.js",
    "server:debug": "ndb server.js",
    "//-CLIENT": "====================================================================================================| CLIENT |",
    "tab:client": "ttab -t 'Client' npm run start:client:js",
    "start:client:js": "parcel watch ./public/js/index.js --public-url ./ --out-dir ./public/js --out-file bundle.js",
    "build:client:js": "parcel build ./public/js/index.js --public-url ./ --out-dir ./public/js --out-file bundle.js",
    "open:page": "open -a 'Google Chrome' 'http://127.0.0.1:3000'",
    "//-MAINTENANCE": "==========================================================================================| MAINTENANCE |",
    "start:mongo": "docker-compose up -d",
    "stop:mongo": "docker-compose stop",
    "import:data": "node dev-data/data/import-dev-data.js --delete; node dev-data/data/import-dev-data.js --import",
    "kill:port": "npx kill-port 3000"
  },
  "author": "Alvaro Gomez",
  "license": "ISC",
  "dependencies": {
    "@babel/polyfill": "^7.11.5",
    "axios": "^0.20.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^2.0.0",
    "express-rate-limit": "^5.1.3",
    "helmet": "^4.1.1",
    "hpp": "^0.2.3",
    "html-to-text": "^5.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.6",
    "mongoose-hidden": "^1.9.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.11",
    "pug": "^3.0.0",
    "sharp": "^0.26.1",
    "slugify": "^1.4.5",
    "stripe": "^8.102.0",
    "validator": "^13.1.17",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "eslint": "^7.9.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "ndb": "^1.1.5",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.1.2",
    "ttab": "^0.7.0"
  },
  "engines": {
    "node": ">=12.18.4"
  }
}
